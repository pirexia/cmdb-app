APP_ENV=development

# Configuración de la Base de Datos
DB_HOST=localhost
DB_NAME=cmdb_app
DB_USER=cmdb_user
DB_PASS=tu_contrasena_segura

# Configuración de SMTP (para envío de correos)
SMTP_HOST=smtp.tuservidor.com
SMTP_PORT=587
SMTP_USERNAME=tu_usuario_smtp
SMTP_PASSWORD=tu_contrasena_smtp
SMTP_ENCRYPTION=tls # 'ssl', 'tls', or ''
SMTP_FROM_EMAIL=no-reply@tuempresa.com
SMTP_FROM_NAME="CMDB App"

# Configuración de Sesión
SESSION_NAME=CMDBAppSession
SESSION_LIFETIME=7200 # Segundos (2 horas)
PASSWORD_EXPIRATION_DAYS=180

# Clave de seguridad para CSRF (generar una única y compleja)
CSRF_SECRET=TU_CLAVE_SECRETA_PARA_CSRF_AQUI_DEBE_SER_LARGA_Y_ALEATORIA

# Parámetro para activar/desactivar el usuario administrador por defecto (1 para activo, 0 para inactivo)
DEFAULT_ADMIN_ENABLED=1
DEFAULT_ADMIN_USERNAME=admin_default
DEFAULT_ADMIN_PASSWORD=admin_temp_password # ¡Cambiar después del primer login!
DEFAULT_ADMIN_EMAIL=admin@tuempresa.com

# Rutas de almacenamiento
UPLOADS_DIR=/var/www/html/cmdb_app/storage/uploads
LOGS_DIR=/var/www/html/cmdb_app/storage/logs

